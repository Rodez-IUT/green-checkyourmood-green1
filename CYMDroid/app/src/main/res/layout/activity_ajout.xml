<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center">

    <LinearLayout android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/gap_top">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/label_humeur"
            android:textSize="@dimen/taille_police"
            />

        <Spinner
            android:id="@+id/spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            
            android:background="@drawable/edittext_style"
            style="@style/champsConnexion"/>

    </LinearLayout>

    <LinearLayout android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/gap_top">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/label_date"
            android:textSize="@dimen/taille_police"/>

        <LinearLayout android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="@string/date_helper"
                android:focusable="false"
                android:background="@drawable/edittext_style"
                style="@style/champsDateHeure"
                android:layout_marginRight="@dimen/gap_right"/>

            <EditText
                android:id="@+id/heure"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="@string/heure_helper"
                android:focusable="false"
                android:background="@drawable/edittext_style"
                style="@style/champsDateHeure"
                android:layout_marginLeft="@dimen/gap_left"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/gap_top">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/label_info"
            android:textSize="@dimen/taille_police"/>

        <EditText
            android:id="@+id/infos"
            style="@style/champsInfosCompl"
            android:layout_width="310dp"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_style"
            android:hint="@string/label_info_helper" />

    </LinearLayout>

    <LinearLayout android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:orientation="horizontal">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_annuler"
            android:layout_marginRight="@dimen/gap_right"
            android:background="@drawable/btnannuler_style"
            style="@style/boutonAnnuler"
            android:onClick="annuler"

            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_valider"
            android:background="@drawable/btnvalider_style"
            style="@style/boutonValider"
            android:onClick="valider"
            android:layout_marginLeft="@dimen/gap_left"
            />
    </LinearLayout>

</LinearLayout>